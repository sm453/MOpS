<?xml version="1.0" encoding="ISO-8859-1"?>
<mops version="3">
  <!-- Default parameters (can be overidden) --> 
  <runs>2</runs>
  <iter>20</iter>
  <atol>1.0e-17</atol> 
  <rtol>1.0e-4</rtol>
  <pcount>4096</pcount>
  <maxm0>0.512e10</maxm0> 
  <relax>0.8</relax>

  <!-- Mixtures -->
  <mixture id="initial">
	  <component id="AR">1.0</component>
	  <temperature units="K">1500</temperature>
	  <pressure units="bar">3</pressure>
  </mixture>

  <mixture id="O2_plasma">
	  <component id="O2">1.0</component>
	  <temperature units="K">3000</temperature>
	  <pressure units="bar">3</pressure>
  </mixture>

  <mixture id="TiCl4_injection">
	  <component id="O2">0.74</component>
	  <component id="TICL4">0.26</component>
	  <temperature units="K">600</temperature>
	  <pressure units="bar">3</pressure>
  </mixture>

  <!-- Reactor definition (given initial conditions) -->
  <reactor type="psr" constt="false" constv="true" id="stage1" units="mol/mol" order="1">
	  <initial>initial</initial>
	  <flow dir="in" frac="0.24">O2_plasma</flow>
	  <flow dir="in" frac="0.76">TiCl4_injection</flow>
	  <restime units="s">0.002</restime>
  </reactor>

  <!-- Output time sequence -->
  <timeintervals>
	  <start>0.0</start>
	  <time splits="10" steps="300">0.003</time>
	  <!--time splits="500" steps="500">0.005</time>
	  <time splits="1000" steps="800">0.009</time-->
  </timeintervals>

  <!-- Simulation output settings -->
  <output>
	  <filename>Network</filename>
	  <statsbound property="dcol">
		  <lower>0</lower>
		  <upper>1.0e30</upper>
	  </statsbound>
	  <console interval="1" msgs="true">
		  <tabular>
			  <column fmt="sci">time</column>
			  <column fmt="float">#sp</column>
			  <column fmt="sci">TICL4</column>
			  <column fmt="sci">O2</column>
			  <column fmt="sci">M0</column>
			  <column fmt="sci">T</column>
		  </tabular>
	  </console>
	  <ptrack enable="true" ptcount="1"/>
  </output>
</mops>
