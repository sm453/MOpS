<?xml version="1.0" encoding="ISO-8859-1"?>
<mops version="3">
    <!-- Default parameters (can be overidden) --> 
    <runs>1</runs>
    <iter>20</iter>
    <atol>1.0e-17</atol> 
    <rtol>1.0e-4</rtol>
    <pcount>1024</pcount>
    <maxm0>1.024e12</maxm0> 
    <relax>0.8</relax>

    <!-- Mixtures -->
    <mixture id="initial">
        <component id="AR">1.0</component>
        <temperature units="K">500</temperature>
        <pressure units="bar">4.5</pressure>
    </mixture>
  
    <mixture id="stage_injection">
        <component id="AR">1.0</component>
        <temperature units="K">500</temperature>
        <pressure units="bar">4.5</pressure>	  
        <!-- Specify primaries and component mean and variance here to build 
		a polydisperse particle ensemble assuming normal distributions --> 		
        <population>
            <m0>1.0e12</m0>
            <particle count="256" usedistribution="true">
                <weight>1.0</weight>
                <component id="Rutile" dx="100000000" dx_var="1e19"/>
                <nprimaries npri="10" npri_var="1000"/>
            </particle>
        </population>
    </mixture>

    <!-- Reactor definition (given initial conditions) -->
    <reactor type="psr" constt="true" constv="true" id="psr1" units="mol/mol" order="1">
        <initial>initial</initial>
        <flow dir="in" frac="1.0">stage_injection</flow>
        <restime units="s">0.003</restime>
    </reactor>

    <!-- Output time sequence -->
    <timeintervals>
        <start>0.0</start>
        <time splits="1" steps="30">0.3</time>
    </timeintervals>

    <!-- Simulation output settings -->
    <output>
        <filename>Test</filename>
        <statsbound property="dcol">
            <lower>0</lower>
            <upper>1.0e30</upper>
        </statsbound>
        <console interval="1" msgs="true">
            <tabular>
                <column fmt="sci">time</column>
                <column fmt="float">#sp</column>
                <column fmt="sci">TICL4</column>
                <column fmt="sci">O2</column>
                <column fmt="sci">M0</column>
                <column fmt="sci">T</column>
            </tabular>
        </console>
        <ptrack enable="true" ptcount="1"/>
    </output>
</mops>
